<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="26sp"/>


    <ImageView
        android:id="@+id/add_new_cars"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/slogan_category"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:src="@drawable/car_icon"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/add_new_bike"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/add_new_cars"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp"
        android:src="@drawable/icon_bike"
        android:layout_alignParentLeft="true" />



</RelativeLayout>